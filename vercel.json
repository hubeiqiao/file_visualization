{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/",
      "destination": "/static/index.html"
    },
    {
      "source": "/(.*).html",
      "destination": "/static/index.html"
    },
    {
      "source": "/api/validate-key",
      "destination": "/api/validate-key.js"
    },
    {
      "source": "/api/analyze-tokens",
      "destination": "/api/analyze-tokens.js"
    },
    {
      "source": "/api/process-stream",
      "destination": "/api/process-stream.js"
    },
    { 
      "source": "/api/(.*)",
      "destination": "/api" 
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*).css",
      "destination": "/static/$1.css"
    },
    {
      "source": "/(.*).js",
      "destination": "/static/$1.js"
    },
    {
      "source": "/(.*).ico",
      "destination": "/static/$1.ico"
    },
    {
      "source": "/(.*).png",
      "destination": "/static/$1.png"
    },
    { 
      "source": "/(.*)",
      "destination": "/static/index.html"
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/validate-key.js": {
      "memory": 256,
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "api/analyze-tokens.js": {
      "memory": 256,
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "api/process-stream.js": {
      "memory": 512,
      "maxDuration": 60,
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11",
      "NODE_VERSION": "18.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
} 