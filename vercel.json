{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "runtime": "edge"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.py"
    }
  ],
  "buildCommand": "chmod +x build_files.sh && ./build_files.sh"
} 