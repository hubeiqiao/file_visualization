{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/process-gemini.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "handler": "process-gemini.Handler",
        "maxDuration": 60
      }
    },
    {
      "src": "api/process-gemini-stream.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "handler": "process-gemini-stream.Handler",
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/process-gemini",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/process-gemini.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/api/process-gemini-stream",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/process-gemini-stream.py",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/server.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "1",
    "EDGE_CONFIG": "1"
  }
} 