{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/process-gemini.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "handler": "process-gemini.Handler",
        "maxDuration": 60
      }
    },
    {
      "src": "api/process-gemini-stream.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "handler": "process-gemini-stream.Handler",
        "maxDuration": 60
      }
    }
  ],
  "functions": {
    "api/process-gemini.py": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/process-gemini-stream.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/process-gemini",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/process-gemini.py"
    },
    {
      "src": "/api/process-gemini-stream",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/process-gemini-stream.py",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Connection": "keep-alive",
        "X-Accel-Buffering": "no"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/server.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "1"
  }
} 