{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/",
      "destination": "/static/index.html"
    },
    {
      "source": "/(.*).html",
      "destination": "/static/index.html"
    },
    {
      "source": "/api/validate-key",
      "destination": "/api/validate-key.js"
    },
    {
      "source": "/api/analyze-tokens",
      "destination": "/api/analyze-tokens.js"
    },
    {
      "source": "/api/process-stream",
      "destination": "/api/process-stream.js"
    },
    { 
      "source": "/api/(.*)",
      "destination": "/api" 
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*).css",
      "destination": "/static/$1.css"
    },
    {
      "source": "/(.*).js",
      "destination": "/static/$1.js"
    },
    {
      "source": "/(.*).ico",
      "destination": "/static/$1.ico"
    },
    {
      "source": "/(.*).png",
      "destination": "/static/$1.png"
    },
    { 
      "source": "/(.*)",
      "destination": "/static/index.html"
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/validate-key.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/analyze-tokens.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/process-stream.js": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  }
} 