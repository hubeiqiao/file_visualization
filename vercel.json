{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/",
      "destination": "/api"
    },
    {
      "source": "/(.*).html",
      "destination": "/api"
    },
    { 
      "source": "/api/(.*)",
      "destination": "/api" 
    },
    {
      "source": "/(.*).css",
      "destination": "/static/$1.css"
    },
    {
      "source": "/(.*).js",
      "destination": "/static/$1.js"
    },
    {
      "source": "/(.*).ico",
      "destination": "/static/$1.ico"
    },
    {
      "source": "/(.*).png",
      "destination": "/static/$1.png"
    },
    { 
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "env": {
    "VERCEL": "true",
    "VERCEL_DEPLOYMENT_TIMESTAMP": "2024-05-24T00:30:00Z"
  }
} 