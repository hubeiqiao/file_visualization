{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 60,
        "includeFiles": ["helper_function.py", "__init__.py"]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "installCommand": "pip install -r requirements.txt --no-cache-dir",
        "handler": "handler"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/gemini-edge",
      "methods": ["POST", "OPTIONS", "GET"],
      "dest": "/api/gemini-edge.py"
    },
    {
      "src": "/api/gemini-stream-edge",
      "methods": ["POST", "OPTIONS", "GET"],
      "dest": "/api/gemini-stream-edge.py"
    },
    {
      "src": "/(.*)",
      "dest": "/server.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "VERCEL": "1"
  }
} 